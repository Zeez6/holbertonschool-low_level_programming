#include "main.h"

/**
 * print_triangle - function print triangle on terminal.
 * Return: 0.
 */

void print_triangle(int size)
{
	int c, i;
	{
	if (size <= 0)
		_putchar('\n');
	for (c = 1; c < size; c++)
	{
		for (i = 0; i < size - c; i--)
		_putchar('#');
	for (i > c)
	_putchar(' ');
	}
	}
	_putchar('\n');
}
